<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#CCffffff"
    android:orientation="vertical"
    android:weightSum="3.0" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@android:color/transparent"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="8dp"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/btndiaclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_close_button"
            android:gravity="center"
            android:onClick="clickdiaclose"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="x"
            android:textColor="#9f9f9f" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.0"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Do you want to download it?"
            android:textColor="#121212"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:weightSum="2.0" >

        <TextView
            android:id="@+id/tvdiayes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/custom_textview"
            android:clickable="true"
            android:gravity="center"
            android:onClick="clickdiayes"
            android:padding="10dp"
            android:text="Yes"
            android:textColor="#1b6c9d"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvdiano"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/custom_textview"
            android:clickable="true"
            android:gravity="center"
            android:onClick="clickdiano"
            android:padding="10dp"
            android:text="No"
            android:textColor="#1b6c9d"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>